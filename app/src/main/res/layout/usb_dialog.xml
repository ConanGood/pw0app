<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/catload" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/text"
        android:fontFamily="@font/montserrat"
        android:text="Waiting..."
        android:textSize="30dp" />
<ir.alirezabdn.wp7progress.WP7ProgressBar
    android:layout_width="match_parent"
    android:layout_height="15dp"
    app:indicatorRadius="5"
    app:indicatorColor="#3949AB"
    android:id="@+id/waitbar"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/usbinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat"
        android:visibility="invisible"
        android:text="Information"
        android:textSize="20dp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/text"
        android:fontFamily="@font/montserrat"
        android:visibility="invisible"
        android:text="Detected: "
        android:textSize="16dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Checking drivers..."
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:id="@+id/drivercheck"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"/>
<ir.alirezabdn.wp7progress.WP10ProgressBar
    android:layout_width="25dp"
    android:layout_height="match_parent"
    android:layout_marginRight="15dp"
    app:indicatorRadius="5"

    app:indicatorColor="#3949AB"
    android:visibility="invisible"
    android:id="@+id/checkbar"/>
    </LinearLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:drawableLeft="@drawable/wifimini"
    android:drawableTint="@color/white"
    android:text="Start monitor mode"
    android:enabled="false"
    android:textColor="@color/button"
    android:onClick="mon1"
    android:id="@+id/monbutton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Cancel"
        android:textColor="@color/button"
        android:id="@+id/dismiss"/>
</LinearLayout>